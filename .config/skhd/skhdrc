# open terminal
cmd - return : /Applications/Kitty.app/Contents/MacOS/kitty --single-instance -d ~ &> /dev/null

# open firefox
cmd - b : /Applications/Firefox.app/Contents/MacOS/firefox

# close window 
shift + cmd - c : $(yabai -m window $(yabai -m query --windows --window | jq -re ".id") --close)

# focus window
lcmd - h : yabai -m window --focus west
lcmd - j : yabai -m window --focus south
lcmd - k : yabai -m window --focus north
lcmd - l : yabai -m window --focus east

# move window
cmd + shift - h : yabai -m window --swap west
cmd + shift - j : yabai -m window --swap south
cmd + shift - k : yabai -m window --swap north
cmd + shift - l : yabai -m window --swap east

# warp window
cmd + shift - a : yabai -m window --warp west
cmd + shift - s : yabai -m window --warp south
cmd + shift - w : yabai -m window --warp north
cmd + shift - d : yabai -m window --warp east

# normalize windows 
lcmd - n : yabai -m space --balance

# Resize windows
lctrl + lcmd - h : yabai -m window --resize left:-50:0; \
                  yabai -m window --resize right:-50:0
lctrl + lcmd - j : yabai -m window --resize bottom:0:50; \
                  yabai -m window --resize top:0:50
lctrl + lcmd - k : yabai -m window --resize top:0:-50; \
                  yabai -m window --resize bottom:0:-50
lctrl + lcmd - l : yabai -m window --resize right:50:0; \
                  yabai -m window --resize left:50:0

# toggle fullscreen
cmd - space : yabai -m window --toggle zoom-fullscreen
cmd + shift - m : yabai -m window --toggle native-fullscreen

# toggle float
cmd + shift - f : yabai -m window --toggle float && yabai -m window --grid 4:4:1:1:2:2

# send window to space
cmd + shift - 1 : yabai -m window --space 1
cmd + shift - 2 : yabai -m window --space 2
cmd + shift - 3 : yabai -m window --space 3
cmd + shift - 4 : yabai -m window --space 4
